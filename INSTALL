Clone this repository into
/opt/passwd.io
as root

sudo apt-get install postgresql

sudo su - postgres
psql template1
CREATE USER passwdio WITH PASSWORD 'Jnx725Frs09Hmc628Tfa42jM';
CREATE DATABASE passwdio;
GRANT ALL PRIVILEGES ON DATABASE passwdio TO passwdio;

sudo apt-get install nginx
sudo rm /etc/nginx/nginx.conf
sudo ln -s /opt/passwd.io/deploy/nginx.conf /etc/nginx/nginx.conf
sudo rm /etc/nginx/sites-available/default
sudo ln -s /opt/passwd.io/deploy/sites-available/default /etc/nginx/sites-available/default
sudo service nginx start

sudo apt-get install python-dev python-pip
sudo pip install virtualenv
sudo mkdir /opt/passwd.io-env
sudo virtualenv /opt/passwd.io-env
sudo ln -s /opt/passwd.io /opt/passwd.io-env/app
cd /opt/passwd.io-env
. bin/activate
cd app
sudo pip install -e .
sudo python migrations/manage.py version_control
sudo python migrations/manage.py upgrade
sudo mkdir /var/run/passwd.io
sudo mkdir /var/log/passwd.io
chown nobody:nogroup /var/run/passwd.io /var/log/passwd.io
sudo su - nobody
bash
cd /opt/passwd.io-env
. bin/activate
cd app
uwsgi --ini-paste-logged development.ini
# reload with
# uwsgi --reload /var/run/passwd.io/uwsgi.pid

